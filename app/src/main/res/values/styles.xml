<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="light_grey_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/light_grey_button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="orange_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="dark_grey_button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/dark_grey_button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="zero_button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/zero_button</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>
</resources>